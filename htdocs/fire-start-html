<body style="margin:0; padding:0; background:#001A33; overflow:hidden;">
    <div id="menu" style="display:none; position:fixed; bottom:25px; left:0; width:200px; background:#002244; border:1px solid #FFD700; z-index:999;">
        <div onclick="parent.createWindow('BYETHOST', 'https://mercwar.byethost3.com')" style="color:#FFD700; padding:10px; cursor:pointer; font-family:monospace; border-bottom:1px solid #003366;">> RUN AVIS SURFACE</div>
    </div>
    
    <div style="width:100%; height:25px; display:flex; align-items:center;">
        <button onclick="toggle()" style="background:#FFD700; color:#000; border:none; height:100%; padding:0 20px; font-weight:bold; cursor:pointer; font-family:monospace;">START</button>
    </div>

    <script>
        function toggle() {
            const m = document.getElementById('menu');
            m.style.display = (m.style.display === 'block') ? 'none' : 'block';
            parent.AVIS_STRIKE("SWITCH: MENU_TOGGLED", 1);
        }
    </script>
