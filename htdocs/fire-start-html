<body>

    <div id="menu">
        <div class="menu-item" onclick="strike('BYETHOST', 'https://mercwar.byethost3.com')">> RUN AVIS SURFACE</div>
        <div class="menu-item" onclick="strike('TERMINAL', 'htdocs/index.html')">> RUN FIRE-GEM TERMINAL</div>
    </div>

    <div id="taskbar">
        <button id="start-btn" onclick="toggleMenu()">START</button>
    </div>

    <script>
        function toggleMenu() {
            const m = document.getElementById('menu');
            const isOpen = m.style.display === 'block';
            m.style.display = isOpen ? 'none' : 'block';
            // Report to Master Log via AVIS
            if(!isOpen) parent.AVIS_STRIKE("SWITCH: START_MENU_OPEN", 1);
        }

        function strike(id, url) {
            // PIERCE THE OBJECT BOUNDARY
            parent.AVIS_STRIKE(`EXEC_STRIKE: ${id}`, 2);
            parent.createWindow(id, url);
            toggleMenu();
        }
    </script>
</body>
</html>
