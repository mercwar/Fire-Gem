    <style>
        /* ROYAL GOLD & BLUE TASKBAR STYLE */
        body { margin: 0; padding: 0; overflow: hidden; font-family: 'Courier New', monospace; }
        
        #taskbar { 
            width: 100%; height: 25px; background: #001A33; 
            border-top: 1px solid #FFD700; display: flex; align-items: center; 
        }

        #start-btn { 
            background: #FFD700; color: #000; border: none; 
            padding: 0 20px; height: 100%; font-weight: bold; 
            cursor: pointer; font-size: 12px;
            box-shadow: 2px 0 5px rgba(0,0,0,0.5);
        }
        #start-btn:hover { background: #C0C0C0; }

        #menu { 
            display: none; position: fixed; bottom: 25px; left: 0; 
            width: 220px; background: #002244; border: 1px solid #FFD700; 
            box-shadow: 5px -5px 15px rgba(0,0,0,0.8);
        }

        .menu-item { 
            color: #FFD700; padding: 12px; cursor: pointer; 
